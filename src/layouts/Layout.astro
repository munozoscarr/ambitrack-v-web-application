---
import { ClientRouter } from 'astro:transitions'

import "../styles/global.css";

import StarsDark from "../components/react/starsdark.tsx";
import StarsLight from "../components/react/starslight.tsx";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Ambitrack - reportes ambientales" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <ClientRouter />
  </head>
  <body>
	<Header />
    <main>
      <slot />
    </main>
	<Footer />
    <StarsDark client:load />
    <StarsLight client:load />
  </body>
</html>
